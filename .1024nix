{ pkgs ? import <nixpkgs> {} }:
pkgs.mkShell {
    shellHook = ''
        alias ll="ls -l"
        export PS1="\[\e[0m\]\w\[\e[0m\]#\[\e[0m\] "
        export LANG=en_US.UTF-8
        export GO111MODULE=on
        export GOPROXY=https://goproxy.cn,direct
        export ACK_GINKGO_RC=true
        export PATH="$HOME/go/bin/:$PATH"
    '';
    packages = [
        # env
        pkgs.go_1_21
        # lsp
        pkgs.gopls
        pkgs.glibcLocales
    ];
}
